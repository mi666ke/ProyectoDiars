<body background="https://c.wallhere.com/photos/4a/47/dentists_male_female_smile-1031835.jpg!d">
    <div class="row">
      <div class="container">
        <div class="form-row">
          <div class="form-group col-md-8">
            <br>
          </div>
          <div class="form-group col-md-4">
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
 
            <div class="card border-primary mb-3">
              <div
                class="card-header bg-transparent border-primary text-primary text-center"
              >
                SEPARAR CITA
              </div>
              <div class="card-body text-primary">
                <form method="POST" action="/Cita/Create">
                  <div class="form-group">
                    <label class="">Doctor:</label>
                    <select class="form-control" name="idDoctor">
                      <option>--Seleccionar doctor--</option>
                      @foreach (var item in ViewBag.Doctores) {
                      <option value="@item.idDoctor">
                        @item.nombres @item.apellidos
                      </option>
                      }
                    </select>
                  </div>

                  <div class="form-group">
                    <label>Fecha</label>
                    <input class="form-control" type="date" name="fecha" />
                  </div>

                  <div class="form-group">
                    <label>Hora inicio</label>
                    <input class="form-control" type="time" name="horaInicio" />
                  </div>

                  <div class="form-group">
                    <label>Hora fin</label>
                    <input class="form-control" type="time" name="horaFin" />
                  </div>

                  <div class="form-group">
                    <label>Cliente</label>
                    <select class="form-control" name="idCliente">
                      <option>--Seleccionar cliente--</option>
                      @foreach (var item in ViewBag.Clientes) {
                      <option value="@item.idCliente">
                        @item.nombres @item.apellidos
                      </option>
                      }
                    </select>
                  </div>

                  <div
                    class="card-footer bg-transparent border-primary text-center"
                  >
                    <button type="submit" class="btn btn-primary">
                      <i class="far fa-save"> </i> Guardar
                    </button>
                    <a type="button" class="btn btn-danger" href="/Home/Index"
                      ><i class="far fa-window-close"></i> Cancelar</a
                    >
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
